            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Edit", "Amenity")'">Edit</button>
            <td>
            </td>
            </tr>
        }
        else if(@item == "Room")
        {
          <tr>
            <td>
             @item
            </td>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Create", "Room")'">Create</button>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Delete", "Room")'">Delete</button>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Edit", "Room")'">Edit</button>
            <td>
            </td>
            </tr>
        }
        else if(@item == "RoomType")
        {
            <tr>
            <td>
             @item
            </td>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Create", "RoomType")'">Create</button>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Delete", "RoomType")'">Delete</button>
            <td>
            <button type="button" class="astextsubmit" onclick="location.href='@Url.Action("Edit", "RoomType")'">Edit</button>
            <td>
            </td>
            </tr>
        }
    }
}
