@{
}

@model CMSRoomViewModel


<form method="post" asp-controller="Room" asp-action="Create">
            <div asp-validation-summary="All"></div>
            <div>
            <select asp-for="RoomType" 
                asp-items="@(new SelectList(Model.RoomTypes))">
                <option>Please select a room type</option>
            </select>
            </div>
            <div>
              <select asp-for="RoomNumber" 
                asp-items="@(new SelectList(Model.RoomNumbers))">
                <option>Please select a room number</option>
            </select>
            </div>
             <button type="submit" class="btn btn-info">Create</button>
        </form>
